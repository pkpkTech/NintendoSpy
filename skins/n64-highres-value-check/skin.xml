  <!-- name: チェックしたいアナログの名前(名前の後ろに_vを付け足せば0～128の数値でチェック) -->
  <!-- label: 左に表示する文字列。 -->
  <!-- label_over: 数値が目標値より大きい時に表示する文字列。 -->
  <!-- label_under: 数値が目標値より小さい時に表示する文字列。 -->
  <!-- label_fit: 数値が目標値の時に表示する文字列。 -->
  <!-- target: 目標値。 -->
  <analog_check name="stick_x" label="x: " label_over="もっと左" label_under="もっと右" label_fit="ぴったり" target="0.9453125"/>
  <analog_check name="stick_y" label="y: " label_over="もっと下" label_under="もっと上" label_fit="ぴったり" target="-0.78125"/>

